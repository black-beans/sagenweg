!!!
%html
  %head
    %title= "Freiämter Sagenweg - #{ data.page.title }"

    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/

    %meta{content: 'index,follow', name: 'Robots'}/
    %meta{content: data.page.desc || 'Freiämter Sagenweg', name: 'description'}/
    %meta{content: data.page.desc || 'sagen, freiamt, aargau, wohlen, erleben, familie', name: 'keywords'}/

    %meta{content: 'Michael Kessler - www.flinkfinger.com', name: 'Developer'}/

    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'print', media: 'print'

    /[if lt IE 8]
      <link href='/css/ie.css' media='screen, projection' rel='stylesheet' type='text/css' />

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28630599-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    %script{src: 'http://use.typekit.com/rgn5szp.js', type: 'text/javascript'}
    :javascript
      try{Typekit.load();}catch(e){}

  %body
    #container
      #header
      = link_to '/index.html' do
        #logo
      = link_to '/index.html' do
        #sagenweg
      #content
        #page{ class: page_classes }
          = yield
      #sidebar
        #menu
          %ul#navigation
            %li.first
              = nav_link 'Freiämter Sagenweg', '/index.html'
            %li
              = nav_link 'Projektidee', '/projektidee.html'
            %li.has_children.parent_of_current
              = nav_link 'Sagen', '/sagen.html'
            %li
              = nav_link 'Künstler', '/kuenstler.html'
            %li.has_children
              = nav_link 'Anreise', '/anreise-situationsplan.html'
            %li
              = nav_link 'Führungen', '/fuehrungen.html'
            %li.has_children
              = nav_link 'Pressearchiv', '/pressearchiv.html'
            %li
              = nav_link 'Fotoalbum', '/fotoalbum.html'
            %li
              = nav_link 'Unterrichtsmaterial', '/unterrichtsmaterial.html'
            %li
              = nav_link 'Sponsoren/Gönner', '/sponsoren-goenner.html'
            %li
              = nav_link 'Kontakt', '/kontakt.html'

        #news
          = link_to '/images/fliers/Winterfuehrung_2014.jpg', rel: 'lightbox' do
            %h3 Winterführung
          = link_to '/fuehrungen.html' do
            %h3 Jahresprogramm 2014
          %a.sublime{href: '#sagenwegvideo'}
            %h3 Sagenweg Kurzfilm
          = link_to '/documents/Prospekt_Sagenweg.pdf' do
            %h3 Sagenweg Prospekt
          %h3
            App für
            %a{href: 'https://itunes.apple.com/us/app/freiaemter-sagenweg/id606774679?mt=8'} iPhone
            oder
            %a{href: 'https://play.google.com/store/apps/details?id=ch.freiaemtersagenweg.freiaemtersagenwegapp&hl=de'} Android

      #footer
        &copy; Copyright 2014 Freiämter Sagenweg.

        %a{ href: 'http://www.flinkfinger.com' }
          Webentwicklung von FlinkFinger GmbH, Bremgarten.

    %video#sagenwegvideo{'data-uid' => '0', height: '390', poster: '/images/Sagenweg.jpg', preload: 'none', style: 'display:none', title: 'Freiämter Sagenweg', width: '590'}
      %source{'data-quality' => 'hd', src: '/videos/Sagenweg.mp4'}

    %script{src: '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js', type: 'text/javascript'}
    %script{src: '//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js', type: 'text/javascript'}
    %script{src: '//malsup.github.io/min/jquery.cycle2.min.js', type: 'text/javascript'}
    %script{src: '//malsup.github.io/min/jquery.cycle2.caption.min.js', type: 'text/javascript'}
    %script{src: '//cdn.sublimevideo.net/js/z5p3m0es.js', type: 'text/javascript'}

    = javascript_include_tag 'application'
